  "dependencies": {},
  "devDependencies": {},
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=1.0.0",
    "fastmcp": ">=1.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
